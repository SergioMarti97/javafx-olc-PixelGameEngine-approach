<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="windowManager.layouts.Screen3Controller">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: F7CAE7;">
        <Label text="Screen 3">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </Label>
        <Button fx:id="btnScreen1" mnemonicParsing="false" text="Screen 1">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
        </Button>
        <Button fx:id="btnScreen2" mnemonicParsing="false" text="Screen 2">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
        </Button>
      <ImageView fx:id="imgView" fitHeight="200.0" fitWidth="300.0" focusTraversable="true" pickOnBounds="true" preserveRatio="true" />
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <Button fx:id="btnStart" mnemonicParsing="false" text="start">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="btnStop" mnemonicParsing="false" text="stop">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
            </Button>
        </HBox>
    </VBox>
</GridPane>
